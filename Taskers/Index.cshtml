@model IEnumerable<TaskA.Models.Tasker>

@{
    ViewBag.Title = "Tasker List";

}
<br />
<br />

@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}


<div class="box box-primary">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><b style="color:#dd4b39; text-transform:capitalize;margin-left:43%;"><i class="fa fa-user-plus"></i>Tasker List</b></h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Service.Service_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Cellnumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tasker_Tellnum)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service.Service_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Cellnumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tasker_Tellnum)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Tasker_ID }) @if (User.IsInRole("Admin"))
                            {

                                @Html.ActionLink("Delete", "Delete", new { id = item.Tasker_ID })
                            }

                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>

