@model IEnumerable<TaskA.Models.TWallet>

@{
    ViewBag.Title = "Index";
}

<h2>Wallets list</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasker.Tasker_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasker.Tasker_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TAmount)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.TWallet_ID }) 
                        @Html.ActionLink("Details", "Details", new { id = item.TWallet_ID }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.TWallet_ID })
                    }
                </td>
            </tr>
        }

    </table>
