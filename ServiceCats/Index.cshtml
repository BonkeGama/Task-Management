@model IEnumerable<TaskA.Models.ServiceCat>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />


<div class="col-md-12">
    <div class="box box-primary">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><b style="color:#dd4b39; text-transform:capitalize;margin-left:43%;"><i class="fa fa-user-plus"></i>Service Category</b></h3>
            </div>
            <div class="panel-body">

                <div class="container col-lg-12">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cost_Per_Hour)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cost_Per_Hour)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ServiceCat_ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ServiceCat_ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ServiceCat_ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to Add New...", "Create")
</p>
