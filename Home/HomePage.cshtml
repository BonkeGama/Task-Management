                    </button>
                    <a class="navbar-brand" href="index.html"><img src="~/Content/enlive/images/freelancer.png" alt="logo" style="width:200px;height:60px;"></a>
                </div>

                <div class="collapse navbar-collapse navbar-right">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Driver"))
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Details", "Drivers")">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("DriverRequest", "Orders")">Delivery List</a>
                            </li>
                        }

                        @if (User.IsInRole("Client"))
