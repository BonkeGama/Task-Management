                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Details", "Clients")">My Profile</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Mybookings", "Bookings")">Booking History</a>
                            </li>
                        }


                        @if (User.IsInRole("Tasker"))
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Details", "Taskers")">My Profile</a>
                            </li>
                            @*<li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
            </li>*@
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("MyOrders", "Orders")">Job Requests</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("AllBookings", "Bookings")">All Pending Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Quotes")">Make Quote</a>
                        </li>
                        @if (!User.IsInRole("Admin") && !User.IsInRole("Driver") && !User.IsInRole("Tasker"))
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("HomePage", "Home")">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">Log-in</a>
                            </li>
                        }


                    </ul>
                </div>
